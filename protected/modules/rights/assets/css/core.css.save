div.span-5, div.span-6, div.span-7, div.span-8, 
div.span-9, div.span-10, div.span-11, div.span-12, 
div.span-13, div.span-14, div.span-15, div.span-16, 
div.span-17, div.span-18, div.span-19, div.span-20, 
div.span-21, div.span-22, div.span-23, div.span-24 {
    float: left;
    margin-right: 10px;
}

.span-12 {
    width: 470px;
}

.first {
    margin-left: 0;
    padding-left: 0;
}

#rights h4 {
    font-size: 1.2em;
    line-height: 1.25;
    margin-bottom: 1.25em;
}

#rights h5 {
    font-size: 1em;
    font-weight: bold;
    margin-bottom: 1.5em;
}

div.wide label
{
    float: left;
    margin-right: 10px;
    position: relative;
    text-align: left;
    width: 180px;
    font-size:12px;
    color:#4C4C4C; 
}

#updatedAuthItem table tr td {
    padding:5px;
}